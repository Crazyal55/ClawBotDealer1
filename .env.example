# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/summit_auto
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=5000
DB_POOL_MAX_USES=0

# API Configuration
PORT=3000
NODE_ENV=development

# CORS / API Security
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_MAX=300

# OpenAI Configuration (for Phase 2)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (for Phase 2 - Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Vector DB Configuration (for Phase 2)
# Choose one: pinecone or qdrant
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp-free
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# Redis Configuration (for Phase 2 - Job Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
MAX_CONCURRENT_SCAPES=5
SCRAPE_TIMEOUT_MS=30000
QUALITY_RECALCULATION_INTERVAL_HOURS=24

# Monitoring Configuration (for Phase 2)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Feature Flags (for Phase 2)
ENABLE_VECTOR_SEARCH=false
ENABLE_AI_CHATBOT=false
ENABLE_BATCH_SCRAPING=false
