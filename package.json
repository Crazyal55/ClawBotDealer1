{
  "name": "dealership-platform",
  "version": "2.0.0",
  "description": "AI-powered dealership platform with modern dashboard",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "start:pg": "node server_pg.js",
    "db:pg:init": "node scripts/init-postgres.js",
    "type-check": "tsc --noEmit",
    "test:smoke": "node scripts/smoke-health.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:edge": "jest tests/unit --testNamePattern='Edge Cases'",
    "test:error": "jest tests/integration --testNamePattern='Error'",
    "test:performance": "jest tests/performance",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "ci": "npm run lint && npm run type-check && npm run test:smoke"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "puppeteer": "^23.11.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "dealership",
    "inventory",
    "scraping",
    "dashboard"
  ],
  "author": "Alex Lajoie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Crazyal55/ClawBotDealer1.git"
  }
}
